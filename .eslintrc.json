{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "no-unused-vars": ["error", "never"],
        "prefer-arrow-callback": ["warning", "always"]
    }
}
