<!DOCTYPE html>
<head>
<%- include('../partials/head') %>
<link href="../css/find_matches.css" rel="stylesheet" type="text/css" />
</head>
<body>
  <header>
    <%- include('../partials/header') %>
<%- include('../partials/nav') %>
</header>
  <main>
     <ul>
      <% for(var i=0; i < data.length; i++) {%>
      <li>
          <img src="data:image/<%=data.image.contentType%>;base64,<%=data.image.image.toString('base64')%>" />
          <div>
            <h2><%= data[i].Firstname %> <%= data[i].Lastname %></h2>
            <p>Age: <%= data[i].Age %></p>
            <p>Fav genres are:</p>
            <ul>
              <% for (var s=0; s < data[i].FavGenres.length; s++) { %> 
                <li>
                    <p><%= data[i].FavGenres[s] %></p>
                </li>
                <% } %>
            </ul>
            
            <form method="POST" action="/like">
              <input type="hidden" name="LikedProfiles" value="<%= data[i].LikedProfiles%>" />
              <input type="hidden" name="id" value="<%= data[i]._id%>" />
              <input type="submit" value="Like" />
          </form>
           
          </div>
      </li>
      <% } %>
    </ul>
    <p>This is the end of the list!</p>
  </main>
  <%- include('../partials/footer') %>
</body>
</html>